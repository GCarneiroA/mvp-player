Import( 'project' )
Import( 'libs' )

sourcesDir = 'src'
mvpPlayerSourcesUi = project.scanFiles( sourcesDir, accept=['*.ui'] )

project.SharedLibrary( 'mvp_player_qtgui',
                       sources   = project.scanFiles( ['src'] ),
                       includes  = ['src'],
                       libraries = [
                                     libs.boost,
                                     libs.qt5( modules=[ 'QtCore', 'QtGui', 'QtWidgets', 'QtMultimedia' ], uiFiles=mvpPlayerSourcesUi ),
                                     libs.mvp_player_gui,
                                     libs.mvp_player_core,
                                     libs.mvp_player_net,
                                    ],
                      )
